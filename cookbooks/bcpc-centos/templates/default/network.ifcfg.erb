DEVICE=<%= @interface %> 
BOOTPROTO=<%= defined?(@ip) ? "static" : "none" %>
IPV6INIT=yes
MTU=1500
NM_CONTROLLED=yes
ONBOOT=yes
TYPE=Ethernet
<%= "IPADDR=#{@ip}" if defined?(@ip) %>
<%= "NETMASK=#{@netmask}" if defined?(@netmask) %>
<%= "GATEWAY=#{@gateway}" if defined?(@gateway) %>
<% if @dns %>
<% @dns.each_with_index do |server, i| -%>
<%= "DNS#{i + 1}=#{server}" %>
<% end %>
<% end %>
