[General]
AdminDomain = <%=node['bcpc']['domain_name']%>
ConfigDirectoryAdminID = <%=get_config('389ds-admin-user')%>
ConfigDirectoryAdminPwd = <%=get_config('389ds-admin-password')%>
ConfigDirectoryLdapURL = ldap://<%=node['bcpc']['management']['ip']%>:389/o=NetscapeRoot
UserDirectoryLdapURL = ldap://<%=node['bcpc']['management']['ip']%>:389/<%= node['bcpc']['domain_name'].split('.').collect { |x| 'dc='+x }.join(',') %>
FullMachineName = <%=node['hostname']%>.<%=node['bcpc']['domain_name']%>
ServerRoot = /usr/lib/x86_64-linux-gnu/dirsrv
SuiteSpotGroup = dirsrv
SuiteSpotUserID = dirsrv

[admin]
Port = 9830
ServerAdminID = <%=get_config('389ds-admin-user')%>
ServerAdminPwd = <%=get_config('389ds-admin-password')%>
ServerIpAddress = 127.0.0.1
SysUser = dirsrv

[slapd]
AddOrgEntries = Yes
AddSampleEntries = No
InstallLdifFile = suggest
RootDN = <%=get_config('389ds-rootdn-user')%>
RootDNPwd = <%=get_config('389ds-rootdn-password')%>
ServerIdentifier = <%=node['hostname']%>
ServerPort = 389
SlapdConfigForMC = yes
